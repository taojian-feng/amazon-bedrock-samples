{"openapi": "3.0.0",
    "info": {
        "title": "Field Design package Status and Reminder API",
        "version": "1.0.0",
        "description": "APIs for identifying field Ddesign package status and sending reminders for packages data that still needs to be collected"
    },
    "paths": {
        "/open-packages": {
            "get": {
                "summary": "Get a list of all open packages",
                "description": "Get the list of all open field Ddesign packages. Return a list of all the open packageIds in comma-separated plaintext.",
                "operationId": "getAllOpenpackages",
                "responses": {
                    "200": {
                        "description": "Gets the list of all open field Ddesign packages for line no.s",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "packageId": {
                                                "type": "string",
                                                "description": "Unique ID of the package."
                                            },
                                            "lineId": {
                                                "type": "string",
                                                "description": "Unique ID of the line no. filed the package."
                                            },
                                            "packageStatus": {
                                                "type": "string",
                                                "description": "The status of the package. package can be in Open or Closed state"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/packages/{packageId}/notify-pending-documents": {
            "post": {
                "summary": "Identify pending documents for a specific package and send reminder to line no.",
                "description": "Get the list of pending documents that need to be uploaded to the package and notify the line no.. This function can be called multiple times with different packageIds as the input parameter. Return the list of comma-separated plaintext pending documents and the reminder tracking ID and status in plaintext.",
                "operationId": "notifyPendingDocuments",
                "parameters": [{
                    "name": "packageId",
                    "in": "path",
                    "description": "Unique ID of the open field Ddesign package",
                    "required": true,
                    "schema": {
                      "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "List of documents that are pending to be uploaded by the line no. for an field Ddesign package",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "sendReminderTrackingId": {
                                            "type": "string",
                                            "description": "Unique Id to track the status of the send reminder Call"
                                        },
                                        "sendReminderStatus": {
                                            "type": "string",
                                            "description": "Status of send reminder notifications"
                                        },
                                        "pendingDocuments": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "description": "List of pending documents"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}